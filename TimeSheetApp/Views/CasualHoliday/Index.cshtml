@model IEnumerable<TimeSheetApp.Models.CasHolidays>

@{
    ViewBag.Title = "Casual Vacations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center">Casual Vacations Index</h2>
@if (ViewBag.UserEmail != "NULL" && ViewBag.UserEmail != "ALL")
{
    if (ViewBag.UserEmail == "ME")
    {
    <h3 style="text-align: center">@Html.ActionLink("Create New", "Create")</h3>
    }
    else
    {
    <h3 style="text-align: center">@Html.ActionLink("Create New", "Create", new { email = ViewBag.UserEmail })</h3>
    }
}

<p>
</p>
<div id="SheetsTable">
    <table id="one-column-emphasis" summary="My Timesheets" style="width: 80%; text-align: center">
        <colgroup>
            <col class="oce-first" />
        </colgroup>
        <thead>
            <tr>
                <th>Name
                </th>

                <th>Vacation Date
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reason)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserModel.Mobile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserModel.Admin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserModel.LastLogin)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.UserModel.FirstName @item.UserModel.LastName
                    </td>

                    <td>
                        @item.HolidayDate.ToString(" ddd dd MMM yyyy ")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reason)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserModel.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserModel.Admin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserModel.LastLogin)
                    </td>
                    <td>
                        @if (User.Identity.Name.Split('-')[1] == (false).ToString())
                        {
                            @Html.ActionLink("Delete", "Delete", new { id = item.CasualHolidayId })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
