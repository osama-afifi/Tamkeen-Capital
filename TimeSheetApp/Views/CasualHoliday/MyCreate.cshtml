@model TimeSheetApp.Models.CasHolidays

@{
    ViewBag.Title = "MyCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center">New Casual Vacation</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset style="text-align:center">
        <legend>Casual Vacation</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.HolidayDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HolidayDate)
            <br />
            @Html.ValidationMessageFor(model => model.HolidayDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Reason)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Reason)
            <br />
            @Html.ValidationMessageFor(model => model.Reason)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
