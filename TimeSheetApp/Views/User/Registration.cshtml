@model TimeSheetApp.Models.UserModel

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{ 
    @Html.ValidationSummary(true, "Creating New User Failed ... Please Check Your Input or try another Email Address");
    <div  style="text-align:center">
        <fieldset>
            <legend>Creating a New User</legend>

            <div class="editor-label">
                @Html.LabelFor(u => u.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Email)
                <br />
                @Html.ValidationMessageFor(u => u.Email)
            </div>
            <br />
            <div class="editor-label">
                @Html.LabelFor(u => u.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.Password)
                <br />
                @Html.ValidationMessageFor(u => u.Password)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.FirstName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.FirstName)
                <br />
                @Html.ValidationMessageFor(u => u.FirstName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.LastName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.LastName)
                <br />
                @Html.ValidationMessageFor(u => u.LastName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(u => u.Admin)
            </div>
            <div class="editor-field">
                @Html.CheckBoxFor(u => u.Admin)
                <br />
                @Html.ValidationMessageFor(u => u.Admin)
            </div>


            <div class="editor-label">
                @Html.LabelFor(u => u.Mobile)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Mobile)
                <br />
                @Html.ValidationMessageFor(u => u.Mobile)
            </div>


            <input type="submit" value="Create User" />
        </fieldset>
    </div>

}